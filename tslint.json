{
	"extends": [
		"tslint-angular"
	],
	"rules": {
		"indent": [
			true,
			"tabs"
		],
		"quotemark": [
			true,
			"double"
		],
		"directive-selector": [
			true,
			"attribute",
			"app",
			"camelCase"
		],
		"component-selector": [
			true,
			"element",
			"app",
			"kebab-case"
		],
		"component-class-suffix": [
			true,
			"Component"
		]
	}
}